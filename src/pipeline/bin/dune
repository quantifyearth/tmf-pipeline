(include_subdirs qualified)

(subdir
 ./static
 (subdir
  ./js
  (rule
   (deps ../../../bin/js/index.bc.js)
   (targets index.js)
   (action
    (copy %{deps} %{targets})))))

(rule
 (target static.ml)
 (deps
  (glob_files static/css/*)
  (glob_files static/img/*)
  (glob_files static/js/index.js))
 (action
  (run ocaml-crunch --mode=plain --output=%{target} static)))
